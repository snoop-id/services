{
    "compilerOptions": {
        "target": "ES6",
        "module": "nodenext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules"]
}
